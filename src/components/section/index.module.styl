.sectionText
  p:not(:first-child)
    text-indent: pxToRem(40)
    +mobile()
      text-indent: pxToRem(25)

.separator
  width: pxToRem(12)
  transform: translateX(50%)
  > div
    height: 50%

.about
  column-gap: pxToRem(20)

.subText
  p + p
    margin-top: pxToRem(8)

.anchor
  transform: translateY(pxToRem(-100))
