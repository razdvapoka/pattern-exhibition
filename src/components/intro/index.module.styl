.logo
  padding-left: pxToRem(14)
  padding-right: pxToRem(23)
  +mobile()
    padding-left: pxToRem(6)
    padding-right: pxToRem(7)
    padding-top: pxToRem(3)

.live::before
  content: ''
  display: block
  position: absolute
  top: 50%
  transform: translateY(-60%)
  left: pxToRem(-65)
  width: pxToRem(38)
  height: pxToRem(38)
  background-color: #3A3A3A
  border-radius: 9999px
  +mobile()
    left: pxToRem(-15)
    width: pxToRem(10)
    height: pxToRem(10)

.title
  margin-top: 20%
  +mobile()
    margin-top: pxToRem(15)
    text-s-F()

.description
  margin-top: auto
  margin-bottom: 5%
  +mobile()
    margin-bottom: pxToRem(5)
    p
      display: inline
    p + p:before
      content: ' '

.introTop
  min-height: pxToRem(650)
  +mobile()
    min-height: 0
.introBottom
  margin-top: pxToRem(-30)
  +mobile()
    margin-top: 0

.canvasBox
  +mobile()
    height: pxToRem(300)

.introInfo
  +mobile()
    height: pxToRem(410)
